<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
               xmlns:m="library://melomel/2010"
               minWidth="800"
               minHeight="600"
               width="1024"
               height="768"
               pageTitle="Intro to BDD with Flex + Cucumber">

    <fx:Declarations>
        <m:Melomel />
    </fx:Declarations>

    <fx:Style source="./assets/css/Main.css" />

    <fx:Script>

        <![CDATA[
             import mx.controls.Alert;

             private function greetButton_onClick (e:MouseEvent) :void
             {
                 var message:String = "Hello " + myTextInput.text + "!";
                 Alert.show(message);
             }
         ]]>

     </fx:Script>

    <s:Label
        id="myLabel"
        text="Intro to BDD with Flex + Cucumber"
        width="100%"
        height="100%"
        fontSize="180"
    />

    <s:VGroup>
        <s:VGroup>
            <s:Label
                text="Name"
            />

            <s:TextInput
                id="myTextInput"
            />
        </s:VGroup>

        <s:Button
            label="Enter"
            click="greetButton_onClick(event);"
        />
    </s:VGroup>
</s:Application>
